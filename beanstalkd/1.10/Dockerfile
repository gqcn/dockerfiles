# loads/beanstalkd:1.10
FROM loads/ubuntu:16.04

LABEL maintainer="john@johng.cn"

###############################################################################
#                                INSTALLATION
###############################################################################

# 安装beanstalkd
RUN apt-get update && apt-get install -y beanstalkd

###############################################################################
#                                   START
###############################################################################

CMD beanstalkd -l 0.0.0.0 -p 11300 -b /var/lib/beanstalkd -z 13107000
